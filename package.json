{
  "name": "zzik-meok",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "extension": "yarn workspace zzik-meok-extension",
    "pc": "yarn workspace zzik-meok-pc",
    "server": "yarn workspace zzik-meok-server",
