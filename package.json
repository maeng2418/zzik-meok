    "ui": "yarn workspace @zzik-meok/ui",
    "clean:package": "npx rimraf ./**/node_modules"
  },
  "devDependencies": {
    "prettier": "3.4.2",
    "turbo": "^2.3.3",
    "typescript": "~5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
